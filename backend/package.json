{
  "name": "backend",
  "version": "1.0.0",
  "main": "src/index.ts",
  "license": "MIT",
  "scripts": {
    "start:dev": "yarn build && concurrently -n prisma,prettier,serve \"yarn dev-prisma\" \"yarn dev-prettier\" \"yarn dev-serve\"",
    "dev-prisma": "nodemon -w datamodel.prisma --exec 'yarn prisma reset --force && yarn prisma generate && yarn prisma deploy --force'",
    "dev-prettier": "onchange 'src/**/*.{ts,tsx}' -- prettier --write {{changed}}",
    "dev-serve": "sleep 5 && tsc-watch -w --noClear --onSuccess 'node --max-old-space-size=2048 dist/src/index.js'",
    "build": "rm -rf dist && mkdir dist && yarn prisma generate && tsc",
    "start": "yarn prisma generate && yarn prisma deploy && node dist/src/index.js"
  },
  "dependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/jsonwebtoken": "^8.3.5",
    "@types/node": "^13.7.1",
    "@types/ws": "^7.2.1",
    "bcryptjs": "^2.4.3",
    "concurrently": "^5.0.0",
    "dotenv": "^8.2.0",
    "faker": "^4.1.0",
    "graphql-cli": "^3.0.14",
    "graphql-yoga": "^1.18.3",
    "jsonwebtoken": "^8.5.1",
    "merge-graphql-schemas": "^1.7.0",
    "prisma": "^1.34.10",
    "prisma-binding": "^2.3.16",
    "prisma-client-lib": "^1.34.10",
    "tsc-watch": "^4.0.0"
  },
  "devDependencies": {
    "nodemon": "^1.19.4",
    "onchange": "^6.1.0",
    "prettier": "^1.18.2",
    "tslint": "^5.20.0",
    "tslint-config-airbnb": "^5.11.2",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.7.5"
  }
}