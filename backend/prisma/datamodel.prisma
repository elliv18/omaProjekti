enum UserType {
  ADMIN
  USER
}
enum VinylType {
  LP
  SINGLE
  SAVIKIEKKO
}
enum ConditionType {
  EXCELLENT
  GOOD
  OKAY
  POOR
}

type User {
  id: ID! @id
  type: UserType!
  name: String!,
  email: String! @unique,
  password: String!
}
type Vinyl {
  id: ID! @id
  name: String!
  year: String
  type: VinylType!
  category: Category @relation(name: "CategoryVinyl")
  condition: ConditionType
  artists: [Artist!]! @relation(name: "ArtistsVinyl")
}
type Artist {
  id: ID! @id
  name: String! @unique
  vinyls: [Vinyl]  @relation(name: "ArtistsVinyl")
}
type Category {
  id: ID! @id
  name: String!
  vinyls: [Vinyl] @relation(name: "CategoryVinyl")
}
