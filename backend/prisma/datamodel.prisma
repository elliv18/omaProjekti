enum UserType {
  ADMIN
  USER
}


type User {
  id: ID! @id
  type: UserType!
  name: String!,
  email: String! @unique,
  password: String!
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
}
type Vinyl {
  id: ID! @id
  name: String!
  year: String
  type: String!
  category: Category! @relation(name: "CategoryVinyl")
  condition: String
  artists: [Artist!]! @relation(name: "ArtistsVinyl")
  forSale: Boolean! @default(value: false)
  sale: ForSale @relation(name: "VinylSale")
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
}
type Artist {
  id: ID! @id
  firstName: String!
  lastName: String!
  vinyls: [Vinyl]  @relation(name: "ArtistsVinyl", onDelete: CASCADE)
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
}
type Category {
  id: ID! @id
  name: String!
  vinyls: [Vinyl]! @relation(name: "CategoryVinyl")
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
}
type ForSale {
  id: ID! @id
  vinyls: [Vinyl] @relation(name: "VinylSale")
  pricePcs: String
  priceTotal: String
  name: String
  description: String
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
}
