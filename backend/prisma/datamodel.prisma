enum UserType {
  ADMIN
  USER
}
enum VinylType {
  LP
  SINGLE
  SAVIKIEKKO
}
enum ConditionType {
  EXCELLENT
  GOOD
  OKAY
  POOR
}

type User {
  id: ID! @id
  type: UserType!
  name: String!,
  email: String! @unique,
  password: String!
}
type Vinyl {
  id: ID! @id
  name: String!
  year: String
  type: VinylType!
  category: Category! @relation(name: "CategoryVinyl")
  condition: ConditionType
  artists: [Artist!]! @relation(name: "ArtistsVinyl")
  forSale: Boolean! @default(value: false)
}
type Artist {
  id: ID! @id
  firstName: String!
  lastName: String!
  vinyls: [Vinyl]  @relation(name: "ArtistsVinyl", onDelete: CASCADE)
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
}
type Category {
  id: ID! @id
  name: String!
  vinyls: [Vinyl]! @relation(name: "CategoryVinyl")
}
type ForSale {
  id: ID! @id
  vinyl: [Vinyl]
  price: String
}
